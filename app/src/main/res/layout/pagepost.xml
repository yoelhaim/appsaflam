<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/getpost"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@color/black">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:fontFamily="@font/tijwal"
            android:gravity="right"
            android:padding="5dp"
            android:text="TextView"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/film"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/backchatyou"
            android:fontFamily="@font/tijwal"
            android:gravity="center"
            android:padding="10dp"
            android:text="TextView"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/type"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/backchatme"
            android:fontFamily="@font/tijwal"
            android:gravity="center"
            android:padding="10dp"
            android:text="TextView"
            android:textColor="@color/white" />

    </LinearLayout>

    <Button
        android:id="@+id/views"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="1dp"
        android:layout_marginRight="20dp"
        android:background="#FF2243"
        android:fontFamily="@font/tijwal"
        android:text="Button"
        app:backgroundTint="#FF2243" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/ic_baseline_play_arrow_24"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/trendends"
        android:layout_width="50dp"
        android:visibility="gone"
        android:gravity="center"
        android:layout_gravity="right|bottom"
        android:layout_marginBottom="45dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/white"
        android:layout_height="50dp"
        android:background="@drawable/rondred"
        android:text="" />

</FrameLayout>